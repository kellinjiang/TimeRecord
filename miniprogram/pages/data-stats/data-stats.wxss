/* 数据统计页面样式 */

.container {
  min-height: 100vh;
  background-color: #F5F9F6;
  padding-bottom: 40rpx;
}

/* 时间维度选择 */
.time-tabs {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  background-color: #FFFFFF;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.time-tab {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  background-color: #F5F9F6;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.time-tab:active {
  transform: scale(0.95);
}

.time-tab.active {
  background: linear-gradient(135deg, #B8D4C8 0%, #A8C9BA 100%);
  color: white;
  font-weight: bold;
  border-color: #B8D4C8;
  box-shadow: 0 4rpx 12rpx rgba(184, 212, 200, 0.2);
}

/* 核心数据指标 */
.stats-overview {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 24rpx;
}

.stat-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.stat-card:active {
  transform: scale(0.98);
}

.stat-card.primary {
  border-left: 6rpx solid #8FB9A8;
}

.stat-card.success {
  border-left: 6rpx solid #B8D4C8;
}

.stat-card.warning {
  border-left: 6rpx solid #A8C9BA;
}

.stat-card.info {
  border-left: 6rpx solid #D4E8DF;
}

.stat-icon {
  font-size: 48rpx;
}

.stat-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #2C5F4A;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 区块样式 */
.section {
  margin: 0 24rpx 24rpx;
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #E5F2EC;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 标签统计 */
.tag-stats {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tag-stat-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tag-stat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tag-stat-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tag-icon {
  font-size: 32rpx;
}

.tag-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.tag-stat-value {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.tag-hours {
  font-size: 32rpx;
  font-weight: bold;
  color: #B8D4C8;
}

.tag-percentage {
  font-size: 24rpx;
  color: #999;
}

.tag-progress-bar {
  height: 12rpx;
  background-color: #D4E8DF;
  border-radius: 6rpx;
  overflow: hidden;
}

.tag-progress-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.3s;
}

/* 时间趋势图表 */
.trend-chart {
  padding: 20rpx 0;
}

.chart-container {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.chart-bars {
  display: flex;
  gap: 12rpx;
  min-width: 100%;
  padding: 0 8rpx;
}

.chart-bar-item {
  flex: 1;
  min-width: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.bar-container {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.bar-fill {
  width: 70%;
  min-height: 4rpx;
  background: linear-gradient(to top, #B8D4C8, #A8C9BA);
  border-radius: 8rpx 8rpx 0 0;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 8rpx;
  transition: all 0.3s;
}

.bar-fill.highlight {
  background: linear-gradient(to top, #8FB9A8, #B8D4C8);
  box-shadow: 0 -4rpx 12rpx rgba(143, 185, 168, 0.3);
}

.bar-value {
  font-size: 20rpx;
  color: white;
  font-weight: bold;
}

.bar-label {
  font-size: 22rpx;
  color: #999;
}

.bar-label.today {
  color: #B8D4C8;
  font-weight: bold;
}

/* 时段分布 */
.hour-distribution {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.hour-item {
  display: grid;
  grid-template-columns: 80rpx 1fr 60rpx;
  align-items: center;
  gap: 16rpx;
}

.hour-label {
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

.hour-bar-bg {
  height: 24rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
}

.hour-bar-fill {
  height: 100%;
  background: linear-gradient(to right, #8FB9A8, #B8D4C8);
  border-radius: 12rpx;
  transition: width 0.3s;
}

.hour-count {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 星期分布 */
.weekday-distribution {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.weekday-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.weekday-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.weekday-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.weekday-hours {
  font-size: 32rpx;
  font-weight: bold;
  color: #1AAD19;
}

.weekday-bar-bg {
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.weekday-bar-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 0.3s;
}

.weekday-bar-fill.weekday {
  background: linear-gradient(to right, #1296db, #10aeff);
}

.weekday-bar-fill.weekend {
  background: linear-gradient(to right, #fa9d3b, #ffc300);
}

.weekday-count {
  font-size: 22rpx;
  color: #999;
}

/* 总结卡片 */
.summary-card {
  margin: 0 24rpx 24rpx;
  background: linear-gradient(135deg, #B8D4C8 0%, #A8C9BA 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(184, 212, 200, 0.2);
}

.summary-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.summary-icon {
  font-size: 40rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.summary-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.summary-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  padding: 16rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
}

.summary-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.summary-value {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

/* 空状态提示 */
.empty-hint {
  padding: 80rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #ccc;
}
