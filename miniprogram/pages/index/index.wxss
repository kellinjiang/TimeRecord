/* pages/index/index.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #B8D4C8 0%, #A8C9BA 100%);
}

/* 顶部时间 */
.header {
  padding: 30rpx 40rpx 16rpx;
  text-align: center;
  color: white;
}

.current-time {
  display: block;
  font-size: 64rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.current-date {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  opacity: 0.95;
}

/* 今日待办卡片 */
.memo-card {
  margin: 0 24rpx 24rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.memo-card-header {
  padding: 24rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  transition: all 0.3s;
}

.memo-card-header:active {
  background-color: #F5F9F6;
}

.memo-card-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.memo-icon {
  font-size: 32rpx;
}

.memo-title-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #2C5F4A;
}

.memo-count {
  font-size: 24rpx;
  color: #999;
}

.memo-card-action {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.action-text {
  font-size: 24rpx;
  color: #B8D4C8;
}

.expand-arrow {
  font-size: 24rpx;
  color: #B8D4C8;
  transition: transform 0.3s;
}

.expand-arrow.expanded {
  transform: rotate(180deg);
}

/* 待办列表内容 */
.memo-card-content {
  border-top: 1rpx solid #E5F2EC;
  padding: 16rpx 28rpx 24rpx;
  background-color: #FAFBFA;
}

.memo-card-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s;
}

.memo-card-item:last-child {
  margin-bottom: 0;
}

.memo-card-item:active {
  transform: scale(0.98);
  background-color: #F5F9F6;
}

.memo-card-item.completed {
  opacity: 0.6;
}

.memo-card-item.completed .memo-item-title {
  text-decoration: line-through;
  color: #999;
}

.memo-item-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.memo-item-time {
  font-size: 22rpx;
  color: #999;
}

.memo-item-title {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.memo-item-right {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.memo-check-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  border: 2rpx solid #B8D4C8;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.memo-check-btn.checked {
  background-color: #B8D4C8;
  border-color: #B8D4C8;
}

.check-icon {
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

/* 录音区域 */
.record-area {
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 16rpx 40rpx;
  min-height: 360rpx;
  max-height: 420rpx;
}

.record-btn {
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.98);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 20rpx 60rpx rgba(184, 212, 200, 0.35);
  transition: all 0.3s ease;
  cursor: pointer;
}

.record-btn.recording {
  background: linear-gradient(135deg, #8FB9A8 0%, #7FB9A8 100%);
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 20rpx 60rpx rgba(184, 212, 200, 0.35);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 25rpx 70rpx rgba(184, 212, 200, 0.45);
  }
}

.mic-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  color: #8FB9A8;
}

.record-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #2C5F4A;
}

.record-btn.recording .mic-icon,
.record-btn.recording .record-text {
  color: white;
}

.status-tip {
  margin-top: 40rpx;
  padding: 16rpx 32rpx;
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 50rpx;
  color: white;
  font-size: 28rpx;
  backdrop-filter: blur(10rpx);
}

/* 最近记录 */
.recent-records {
  flex: 1;
  flex-shrink: 1;
  background-color: #FFFFFF;
  border-radius: 40rpx 40rpx 0 0;
  padding: 32rpx 32rpx;
  max-height: 45vh;
  overflow-y: auto;
  box-shadow: 0 -8rpx 30rpx rgba(184, 212, 200, 0.15);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #4A5248;
  margin-bottom: 24rpx;
}

.record-list {
  /* 列表容器 */
}

.record-item {
  background-color: #F5F9F6;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  border: 2rpx solid #E5F2EC;
}

.record-item:active {
  background-color: #EBF5F0;
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(184, 212, 200, 0.1);
}

.record-time {
  font-size: 24rpx;
  color: #6B9480;
  margin-bottom: 12rpx;
}

.record-content {
  font-size: 28rpx;
  color: #4A5248;
  margin-bottom: 16rpx;
  line-height: 1.7;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.record-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
  background-color: #EBF5F0;
  color: #8FB9A8;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #8A9580;
  font-size: 28rpx;
}
