/* pages/index/index.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 顶部时间 */
.header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  color: white;
}

.current-time {
  display: block;
  font-size: 80rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
}

.current-date {
  display: block;
  margin-top: 16rpx;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 录音区域 */
.record-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.record-btn {
  width: 360rpx;
  height: 360rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s;
  cursor: pointer;
}

.record-btn.recording {
  background-color: #E74C3C;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.mic-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.record-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.record-btn.recording .mic-icon,
.record-btn.recording .record-text {
  color: white;
}

.status-tip {
  margin-top: 40rpx;
  padding: 16rpx 32rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  color: white;
  font-size: 28rpx;
}

/* 最近记录 */
.recent-records {
  background-color: white;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 32rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.record-list {
  /* 列表容器 */
}

.record-item {
  background-color: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  transition: all 0.2s;
}

.record-item:active {
  background-color: #e9ecef;
  transform: scale(0.98);
}

.record-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.record-content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.record-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}
