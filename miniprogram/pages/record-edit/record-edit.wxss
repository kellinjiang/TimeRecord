/* pages/record-edit/record-edit.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 表单区块 */
.form-section {
  background-color: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.char-count {
  font-size: 24rpx;
  font-weight: normal;
  color: #999;
}

.input-tip {
  font-size: 24rpx;
  color: #1AAD19;
  margin-bottom: 16rpx;
  padding: 12rpx 20rpx;
  background-color: #f0f9f1;
  border-radius: 8rpx;
  line-height: 1.5;
}

/* 时间选择器 */
.time-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
}

.time-value {
  font-size: 32rpx;
  color: #333;
}

.arrow {
  font-size: 40rpx;
  color: #999;
}

/* 内容输入框 */
.content-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  border: 2rpx solid #e9ecef;
  box-sizing: border-box;
}

/* 标签容器 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 16rpx 24rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  background-color: #f5f5f5;
  color: #666;
  transition: all 0.2s;
  border: 2rpx solid transparent;
}

.tag-item.selected {
  border-color: currentColor;
  font-weight: 500;
}

.tag-item.more-tag {
  background-color: #fff;
  border: 2rpx dashed #ddd;
  color: #999;
}

/* 模板滚动容器 */
.templates-scroll {
  width: 100%;
  white-space: nowrap;
}

.templates-container {
  display: inline-flex;
  gap: 16rpx;
}

.template-item {
  display: inline-block;
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 26rpx;
  white-space: nowrap;
}

/* 底部操作按钮 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  background-color: white;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.btn-cancel,
.btn-save {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-save {
  background-color: #1AAD19;
  color: white;
}

.btn-cancel::after,
.btn-save::after {
  border: none;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: none;
  z-index: 1000;
  align-items: center;
  justify-content: center;
}

.modal.show {
  display: flex;
}

.modal-content {
  width: 90%;
  max-height: 70vh;
  background-color: white;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
}

.all-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.modal-footer {
  padding: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.btn-confirm {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1AAD19;
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.btn-confirm::after {
  border: none;
}

/* 录音播放器 */
.audio-player {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 30rpx;
  background: linear-gradient(135deg, #f0f9f1 0%, #e8f5e9 100%);
  border-radius: 16rpx;
  border: 2rpx solid #1AAD19;
  transition: all 0.2s;
}

.audio-player:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #e8f5e9 0%, #d4f1d7 100%);
}

.audio-icon {
  font-size: 36rpx;
  flex-shrink: 0;
}

.audio-text {
  font-size: 28rpx;
  color: #1AAD19;
  font-weight: 500;
}
