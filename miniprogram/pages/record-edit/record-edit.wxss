/* pages/record-edit/record-edit.wxss */

.container {
  min-height: 100vh;
  background-color: #F5F9F6;
  padding-bottom: 140rpx;
}

/* 表单区块 */
.form-section {
  background-color: #FFFFFF;
  margin-bottom: 24rpx;
  padding: 36rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(184, 212, 200, 0.08);
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.section-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #2C5F4A;
  margin-bottom: 24rpx;
}

.char-count {
  font-size: 24rpx;
  font-weight: normal;
  color: #6B9480;
}

.input-tip {
  font-size: 24rpx;
  color: #8FB9A8;
  margin-bottom: 16rpx;
  padding: 16rpx 24rpx;
  background-color: #EBF5F0;
  border-radius: 16rpx;
  line-height: 1.6;
  border: 1rpx solid #E5F2EC;
}

/* 时间选择器 */
.time-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  border: 2rpx solid #E5F2EC;
}

.time-value {
  font-size: 34rpx;
  color: #4A5248;
  font-weight: 500;
}

.arrow {
  font-size: 40rpx;
  color: #A8C9BA;
}

/* 内容输入框 */
.content-input {
  width: 100%;
  min-height: 240rpx;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.8;
  border: 2rpx solid #E5F2EC;
  box-sizing: border-box;
  color: #4A5248;
}

/* 标签容器 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  padding: 18rpx 28rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  background-color: #EBF5F0;
  color: #8FB9A8;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.tag-item.selected {
  border-color: currentColor;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(184, 212, 200, 0.15);
  transform: translateY(-2rpx);
}

.tag-item.more-tag {
  background-color: #FFFFFF;
  border: 2rpx dashed #D4E8DF;
  color: #6B9480;
}

/* 模板滚动容器 */
.templates-scroll {
  width: 100%;
  white-space: nowrap;
}

.templates-container {
  display: inline-flex;
  gap: 20rpx;
}

.template-item {
  display: inline-block;
  padding: 24rpx 36rpx;
  background: linear-gradient(135deg, #B8D4C8 0%, #A8C9BA 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 26rpx;
  white-space: nowrap;
  box-shadow: 0 6rpx 20rpx rgba(184, 212, 200, 0.25);
  transition: all 0.3s ease;
}

.template-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(184, 212, 200, 0.2);
}

/* 底部操作按钮 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 24rpx;
  padding: 24rpx 36rpx;
  background-color: #FFFFFF;
  box-shadow: 0 -4rpx 24rpx rgba(184, 212, 200, 0.1);
  z-index: 100;
}

.btn-cancel,
.btn-save {
  flex: 1;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-cancel {
  background-color: #EBF5F0;
  color: #6B7A68;
}

.btn-cancel:active {
  background-color: #E5F2EC;
}

.btn-save {
  background: linear-gradient(135deg, #B8D4C8 0%, #8FB9A8 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(184, 212, 200, 0.3);
}

.btn-save:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(184, 212, 200, 0.25);
}

.btn-cancel::after,
.btn-save::after {
  border: none;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(74, 82, 72, 0.5);
  display: none;
  z-index: 1000;
  align-items: center;
  justify-content: center;
}

.modal.show {
  display: flex;
}

.modal-content {
  width: 90%;
  max-height: 70vh;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8rpx 40rpx rgba(184, 212, 200, 0.15);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx;
  border-bottom: 2rpx solid #E5F2EC;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #4A5248;
}

.modal-close {
  font-size: 40rpx;
  color: #6B9480;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #EBF5F0;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 36rpx;
}

.all-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.modal-footer {
  padding: 36rpx;
  border-top: 2rpx solid #E5F2EC;
}

.btn-confirm {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  background: linear-gradient(135deg, #B8D4C8 0%, #8FB9A8 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(184, 212, 200, 0.3);
  transition: all 0.3s ease;
}

.btn-confirm:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(184, 212, 200, 0.25);
}

.btn-confirm::after {
  border: none;
}

/* 录音播放器 */
.audio-player {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 28rpx 32rpx;
  background: linear-gradient(135deg, #EBF5F0 0%, #E5F2EC 100%);
  border-radius: 24rpx;
  border: 2rpx solid #D4E8DF;
  transition: all 0.3s ease;
}

.audio-player:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #E5F2EC 0%, #D4E8DF 100%);
}

.audio-icon {
  font-size: 36rpx;
  flex-shrink: 0;
}

.audio-text {
  font-size: 28rpx;
  color: #8FB9A8;
  font-weight: 500;
}
