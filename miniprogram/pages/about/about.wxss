/* 关于我们页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx 40rpx;
}

/* 应用图标 */
.app-icon {
  width: 160rpx;
  height: 160rpx;
  background-color: white;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 32rpx;
}

.icon-text {
  font-size: 96rpx;
}

/* 应用名称 */
.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.app-version {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 60rpx;
}

/* 介绍区域 */
.intro-section {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.intro-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  text-align: justify;
}

/* 联系我们区域 */
.contact-section {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.contact-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.contact-text {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
}

/* 二维码 */
.qrcode-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  background-color: #fafafa;
}

.qrcode-tip {
  font-size: 22rpx;
  color: #999;
}

/* 版权信息 */
.copyright {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}
