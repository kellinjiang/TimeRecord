/* pages/monthly/monthly.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 月份导航 */
.month-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;
  padding: 30rpx 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.month-nav {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  transition: all 0.2s;
}

.month-nav:active {
  background-color: #f5f5f5;
  transform: scale(0.95);
}

.nav-arrow {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

.month-picker {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.current-month {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.year-label {
  font-size: 24rpx;
  color: #999;
}

/* 统计卡片 */
.stats-card {
  background-color: white;
  margin: 0 24rpx 20rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stats-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.stats-content {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #1AAD19;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #e0e0e0;
}

/* 标签分布条形图 */
.tags-distribution {
  display: flex;
  height: 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.tag-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  transition: all 0.3s;
}

.tag-bar-label {
  font-size: 20rpx;
  color: white;
}

/* 日历区域 */
.calendar-section {
  background-color: white;
  margin: 0 24rpx 20rpx;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.calendar-hint {
  font-size: 22rpx;
  color: #999;
}

.calendar {
  width: 100%;
}

/* 星期标题 */
.calendar-weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 4rpx;
  margin-bottom: 8rpx;
}

.weekday-label {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 12rpx 0;
}

/* 日期网格 */
.calendar-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 4rpx;
}

.day-cell {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  background-color: #fafafa;
  transition: all 0.2s;
  position: relative;
}

.day-cell.has-records {
  background-color: #e8f5e9;
}

.day-cell.today {
  background-color: #1AAD19;
}

.day-cell.today .day-number {
  color: white;
  font-weight: bold;
}

.day-cell.other-month {
  opacity: 0.3;
}

.day-cell:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.day-number {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.day-indicator {
  position: absolute;
  bottom: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.record-count {
  font-size: 18rpx;
  color: #1AAD19;
  background-color: white;
  padding: 2rpx 6rpx;
  border-radius: 8rpx;
  font-weight: bold;
}

.day-cell.today .record-count {
  background-color: rgba(255, 255, 255, 0.9);
}

/* 周趋势图 */
.week-chart-section {
  background-color: white;
  margin: 0 24rpx 20rpx;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chart-unit {
  font-size: 22rpx;
  color: #999;
}

.week-chart {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.week-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.week-bar-container {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  background-color: #fafafa;
  border-radius: 8rpx;
  padding: 8rpx;
}

.week-bar-fill {
  width: 100%;
  min-height: 4rpx;
  border-radius: 4rpx 4rpx 0 0;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 8rpx;
  transition: all 0.3s;
}

.week-bar-value {
  font-size: 20rpx;
  color: white;
  font-weight: bold;
}

.week-bar-label {
  font-size: 22rpx;
  color: #666;
}

.week-bar-date {
  font-size: 20rpx;
  color: #999;
}

/* 空状态 */
.empty-chart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

/* 标签统计区域 */
.tags-section {
  background-color: white;
  margin: 0 24rpx 20rpx;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tags-count {
  font-size: 22rpx;
  color: #999;
}

.tag-list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tag-stat-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tag-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tag-icon {
  font-size: 32rpx;
}

.tag-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.tag-data {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-left: auto;
}

.tag-hours {
  font-size: 28rpx;
  color: #1AAD19;
  font-weight: bold;
}

.tag-percentage {
  font-size: 24rpx;
  color: #999;
  min-width: 60rpx;
  text-align: right;
}

.tag-bar-bg {
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.tag-bar-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s;
}

/* 月总结区域 */
.summary-section {
  background-color: white;
  margin: 0 24rpx 20rpx;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.summary-hint {
  font-size: 22rpx;
  color: #999;
}

.summary-input {
  margin-top: 20rpx;
  position: relative;
}

.summary-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
}

.summary-char-count {
  position: absolute;
  bottom: 12rpx;
  right: 20rpx;
  font-size: 22rpx;
  color: #999;
  background-color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
