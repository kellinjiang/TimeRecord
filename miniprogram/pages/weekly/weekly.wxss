/* pages/weekly/weekly.wxss */

.container {
  min-height: 100vh;
  background-color: #F5F9F6;
  padding-bottom: 40rpx;
}

/* 周头部导航 */
.week-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background-color: #FFFFFF;
  border-bottom: 2rpx solid #E5F2EC;
}

.week-nav {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-arrow {
  font-size: 48rpx;
  color: #6B7A68;
  font-weight: 300;
}

.week-picker-trigger {
  flex: 1;
  display: flex;
  justify-content: center;
}

.week-picker {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.current-week {
  font-size: 36rpx;
  font-weight: bold;
  color: #2C5F4A;
}

.week-range {
  font-size: 28rpx;
  color: #666;
}

.week-label {
  font-size: 24rpx;
  color: #6B9480;
}

/* 统计卡片 */
.stats-card {
  margin: 20rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stats-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.stats-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #B8D4C8;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #D4E8DF;
}

/* 标签分布条形图 */
.tags-distribution {
  display: flex;
  height: 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.tag-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  transition: all 0.3s;
}

.tag-bar-label {
  font-size: 20rpx;
  color: white;
  font-weight: 500;
  white-space: nowrap;
}

/* 柱状图区域 */
.chart-section {
  margin: 20rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.chart-unit {
  font-size: 22rpx;
  color: #999;
}

/* 柱状图 */
.bar-chart {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 360rpx;
  padding: 20rpx 0;
  gap: 8rpx;
}

.bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  height: 100%;
}

.bar-container {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.bar-fill {
  width: 70%;
  min-height: 4rpx;
  border-radius: 8rpx 8rpx 0 0;
  background: linear-gradient(to top, #B8D4C8, #A8C9BA);
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 8rpx;
  transition: all 0.3s;
  position: relative;
}

.bar-fill:active {
  opacity: 0.8;
}

.bar-value {
  font-size: 20rpx;
  color: white;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.bar-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.bar-label.today {
  color: #B8D4C8;
  font-weight: bold;
}

.bar-date {
  font-size: 20rpx;
  color: #999;
}

/* 空状态 */
.empty-chart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 标签统计区域 */
.tags-section {
  margin: 20rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tags-count {
  font-size: 24rpx;
  color: #999;
}

.tag-list {
  margin-top: 16rpx;
}

.tag-stat-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.tag-stat-item:last-child {
  border-bottom: none;
}

.tag-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.tag-icon {
  font-size: 32rpx;
}

.tag-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.tag-data {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.tag-hours {
  font-size: 32rpx;
  color: #1AAD19;
  font-weight: bold;
}

.tag-percentage {
  font-size: 24rpx;
  color: #999;
}

.tag-bar-bg {
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.tag-bar-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s;
}

/* 周总结 */
.summary-section {
  margin: 20rpx;
}

.summary-hint {
  font-size: 24rpx;
  color: #999;
}

.summary-input {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.summary-textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.summary-char-count {
  text-align: right;
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #999;
}
