/* pages/memo-edit/memo-edit.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F9F6;
  display: flex;
  flex-direction: column;
}

/* 表单滚动区域 */
.form-scroll {
  flex: 1;
  padding: 24rpx;
}

/* 表单区块 */
.form-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 区块标签 */
.section-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.required {
  color: #FF5733;
  margin-left: 4rpx;
  font-size: 32rpx;
}

.optional {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 输入框 */
.input-field {
  width: 100%;
  height: 88rpx;
  background-color: #F5F9F6;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input-field:focus {
  background-color: white;
  border-color: #B8D4C8;
}

/* 时间选择器行 */
.time-picker-row {
  display: flex;
  gap: 16rpx;
}

.picker-field {
  flex: 1;
  height: 88rpx;
  background-color: #F5F9F6;
  border-radius: 12rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.picker-field:active {
  background-color: white;
  border-color: #B8D4C8;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 48rpx;
  color: #D4E8DF;
  font-weight: bold;
}

/* 优先级按钮 */
.priority-buttons {
  display: flex;
  gap: 16rpx;
}

.priority-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.priority-btn.priority-1 {
  background-color: rgba(46, 204, 113, 0.1);
  color: #2ECC71;
}

.priority-btn.priority-1.active {
  background-color: #2ECC71;
  color: white;
  border-color: #2ECC71;
}

.priority-btn.priority-2 {
  background-color: rgba(243, 156, 18, 0.1);
  color: #F39C12;
}

.priority-btn.priority-2.active {
  background-color: #F39C12;
  color: white;
  border-color: #F39C12;
}

.priority-btn.priority-3 {
  background-color: rgba(255, 87, 51, 0.1);
  color: #FF5733;
}

.priority-btn.priority-3.active {
  background-color: #FF5733;
  color: white;
  border-color: #FF5733;
}

/* 文本域 */
.textarea-field {
  width: 100%;
  min-height: 200rpx;
  background-color: #F5F9F6;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.textarea-field:focus {
  background-color: white;
  border-color: #B8D4C8;
}

.char-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 8rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 24rpx;
  display: flex;
  gap: 16rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.cancel-btn,
.save-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.cancel-btn::after,
.save-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #F5F9F6;
  color: #666;
}

.cancel-btn:active {
  transform: scale(0.98);
  background-color: #E5F2EC;
}

.save-btn {
  background: linear-gradient(135deg, #B8D4C8 0%, #A8C9BA 100%);
  color: white;
}

.save-btn[disabled] {
  opacity: 0.5;
}

.save-btn:active {
  transform: scale(0.98);
}

/* 删除区域 */
.delete-section {
  padding: 0 24rpx 140rpx;
}

.delete-btn {
  width: 100%;
  height: 88rpx;
  background-color: rgba(255, 87, 51, 0.1);
  border-radius: 44rpx;
  color: #FF5733;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn::after {
  border: none;
}

.delete-btn:active {
  transform: scale(0.98);
  background-color: rgba(255, 87, 51, 0.15);
}
