/* 登录页面样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #B8D4C8 0%, #A8C9BA 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 48rpx;
}

/* 顶部区域 */
.header {
  padding-top: 60rpx;
  padding-bottom: 40rpx;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-top: 8rpx;
}

.app-slogan {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 表单区域 */
.form-container {
  width: 100%;
  background-color: white;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C5F4A;
  text-align: center;
  margin-bottom: 32rpx;
}

/* 头像选择 */
.avatar-section {
  margin-bottom: 32rpx;
}

.section-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.avatar-btn {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F9F6;
  border-radius: 80rpx;
  border: 2rpx dashed #B8D4C8;
  padding: 0;
  overflow: hidden;
}

.avatar-btn::after {
  border: none;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.avatar-placeholder-icon {
  font-size: 64rpx;
  color: #B8D4C8;
}

.avatar-placeholder-text {
  font-size: 24rpx;
  color: #999;
}

.section-tips {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  margin-top: 12rpx;
}

/* 昵称输入 */
.nickname-section {
  margin-bottom: 16rpx;
}

.nickname-input {
  width: 100%;
  height: 88rpx;
  background-color: #F5F9F6;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.nickname-input:focus {
  background-color: white;
  border-color: #B8D4C8;
}

/* 功能介绍 */
.features {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.feature-icon {
  font-size: 40rpx;
}

.feature-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

/* 底部区域 */
.footer {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  margin-top: auto;
  padding-bottom: 40rpx;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background-color: white;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  border: none;
  transition: all 0.3s;
}

.login-btn[disabled] {
  opacity: 0.5;
}

.login-btn::after {
  border: none;
}

.login-btn-hover {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.login-btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C5F4A;
}

.privacy-tips {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 8rpx;
}

.tips-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.tips-link {
  font-size: 24rpx;
  color: white;
  text-decoration: underline;
}
