/* 登录页面样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #B8D4C8 0%, #A8C9BA 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 48rpx;
}

/* 顶部区域 */
.header {
  padding-top: 60rpx;
  padding-bottom: 40rpx;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-top: 8rpx;
}

.app-slogan {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 表单区域 */
.form-container {
  width: 100%;
  background-color: white;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2C5F4A;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 头像选择 */
.avatar-section {
  margin-bottom: 40rpx;
}

.section-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.avatar-btn {
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F9F6;
  border-radius: 90rpx;
  border: 3rpx dashed #B8D4C8;
  padding: 0;
  overflow: hidden;
  transition: all 0.3s ease;
}

.avatar-btn:active {
  transform: scale(0.95);
}

.avatar-btn::after {
  border: none;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.avatar-placeholder-icon {
  font-size: 72rpx;
  color: #B8D4C8;
}

.avatar-placeholder-text {
  font-size: 26rpx;
  color: #999;
  font-weight: 500;
}

.section-tips {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 16rpx;
}

/* 昵称输入 */
.nickname-section {
  margin-bottom: 16rpx;
}

.nickname-input {
  width: 100%;
  height: 96rpx;
  background-color: #F5F9F6;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  box-sizing: border-box;
}

.nickname-input:focus {
  background-color: white;
  border-color: #B8D4C8;
  box-shadow: 0 0 0 4rpx rgba(184, 212, 200, 0.1);
}

/* 功能介绍 */
.features {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.feature-icon {
  font-size: 40rpx;
}

.feature-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
}

/* 底部区域 */
.footer {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  margin-top: auto;
  padding-bottom: 40rpx;
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background-color: white;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  border: none;
  transition: all 0.3s;
}

.login-btn[disabled] {
  opacity: 0.5;
}

.login-btn::after {
  border: none;
}

.login-btn-hover {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.login-btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C5F4A;
}

/* 隐私政策复选框 */
.privacy-section {
  width: 100%;
  margin-bottom: 24rpx;
}

.privacy-checkbox {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

/* 自定义复选框 */
.custom-checkbox {
  flex-shrink: 0;
  width: 44rpx;
  height: 44rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 8rpx;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.custom-checkbox.checked {
  background-color: #2C5F4A;
  border-color: #2C5F4A;
}

.checkbox-icon {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  line-height: 1;
}

.privacy-content {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 4rpx;
  line-height: 44rpx;
}

.privacy-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
}

.privacy-link {
  font-size: 28rpx;
  color: white;
  text-decoration: underline;
  font-weight: bold;
}

/* 跳过登录按钮 */
.skip-login {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.skip-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: underline;
}
