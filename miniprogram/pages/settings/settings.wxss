/* pages/settings/settings.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F9F6;
  padding-bottom: 30rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #B8D4C8 0%, #A8C9BA 100%);
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(184, 212, 200, 0.2);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  background-color: #FFFFFF;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-avatar open-data {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.user-days {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 数据统计总览 */
.stats-section {
  background-color: white;
  margin: 0 24rpx 20rpx;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2C5F4A;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-card {
  background-color: #F5F9F6;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.2s;
}

.stat-card:active {
  transform: scale(0.98);
  background-color: #EBF5F0;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #B8D4C8;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 标签统计 */
.tags-section {
  background-color: white;
  margin: 0 24rpx 20rpx;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tag-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
}

.tag-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tag-icon {
  font-size: 32rpx;
}

.tag-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.tag-hours {
  font-size: 28rpx;
  color: #1AAD19;
  font-weight: bold;
}

/* 菜单区域 */
.menu-section {
  background-color: white;
  margin: 0 24rpx 20rpx;
  border-radius: 16rpx;
  padding: 32rpx 24rpx 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #E5F2EC;
  transition: all 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #fafafa;
  margin: 0 -24rpx;
  padding: 24rpx;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.menu-icon {
  font-size: 40rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.menu-badge {
  font-size: 24rpx;
  color: white;
  background-color: #B8D4C8;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  min-width: 32rpx;
  text-align: center;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  font-size: 40rpx;
  color: #D4E8DF;
  font-weight: bold;
}
